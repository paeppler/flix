<h1>Sign In</h1>

<%= form_with(url: session_path) do |f| %>

  <%= f.label :email_or_username %>
  <%= f.text_field :email_or_username, autofocus: true %>

  <%#= f.label :username %>
  <%#= f.text_field :username, autofocus: true %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign In" %>
<% end %>

<span>New Here? <%= link_to "Sign Up!", signup_path %> </span>